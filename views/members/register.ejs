<html lang="en">
  <%# include('../partials/head.ejs') %>

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>天氣穿衣註冊頁</title>
    <link rel="stylesheet" href="/styles/styles.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gemunu+Libre:wght@200&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <%# include('../partials/nav.ejs') %>

    <header>
      <table
        width="380"
        cellspacing="0"
        cellpadding="0"
        style="font-family: 'Gemunu Libre', sans-serif"
      >
        <tr>
          <!-- Logo -->
          <td width="80" height="100" align-items="center" valign="middle">
            <span style="color: #ffffff"
              ><img
                src="/assets/images/weather-dressing-logo.jpg"
                width="95"
                height="100"
                alt=""
            /></span>
          </td>

          <!-- title -->
          <td class="header.center">
            <p>天氣穿衣</p>
            <p>Weather Dressing</p>
          </td>

          <!-- login navbar -->
          <td width="100" height="100" valign="middle" bgcolor="#498EAF">
            <a href="login.html">登入</a>
          </td>
        </tr>
      </table>
    </header>

    <section class="center">
      <form action="/members/register" method="POST" class="register" id="registerForm">
        <h2>註冊會員</h2>
        <input type="text" name="account" placeholder="帳號" style="color: azure" />
        <input type="password" name="password" placeholder="密碼" />
        <input type="password" name="confirmPassword" placeholder="確認密碼" />
        <br />
        性別：<input type="radio" name="gender" value="male" checked="true" />男
        <input type="radio" name="gender" value="female" />女
        <input type="submit" value="送出" />
      </form>
    </section>

    <footer style="font-family: 'Gemunu Libre', sans-serif">
      &copy; 天氣穿衣 Weather Dressing
    </footer>

