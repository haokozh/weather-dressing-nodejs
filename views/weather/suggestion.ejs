            <option>公司</option>
            <option>出遊</option>
          </select>

          <br />
          <br />

          <input
            class="buttonl1"
            type="button"
            id="love1chenge"
            value="添加到我的最愛"
            style="
              border-radius: 10px #e9e4e4 double;
              background-color: #86add1;
            "
          />

          <br />
          <br />

          <label for="select" scope="col">我的最愛</label>
          <select name="select3" id="select3">
            <option>請選擇</option>
            <option>1-未設定</option>
            <option>2-未設定</option>
            <option>3-未設定</option>
          </select>
        </form>
      </div>

      <br />

      <div class="row content align-middle" style="text-align: center">
        <div class="sublove">
          <input
            type="submit"
            id="love2"
            value="查看穿搭"
            data-action="submit"
          />
        </div>
      </div>
    </section>

    <%- include('../partials/footer.ejs') %>

    <script src="/js/select-location.js"></script>
  </body>
</html>
