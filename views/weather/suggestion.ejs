<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <%- include('../partials/nav.ejs') %>

    <section class="container-fluid">
      <div class="row content align-middle" style="background-color: #f8f8f8">
        <form class="select" style="text-align: center">
          <!--標題字-->
          <div style="background-color: #86add1; text-align: center">
            <h3>選擇條件</h3>
          </div>

          <label for="select" scope="col">地區</label>
          <div role="tw-city-selector"></div>
          <select
            id="city-list"
            onchange="changeCity(this.selectedIndex)"
          ></select>
          <select id="sector-list"></select>

          <br />
          <br />

          <label for="select" scope="col">出門目的</label>
          <select name="select3" id="select3">
